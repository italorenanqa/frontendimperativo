maior_altura = 0
menor_altura = 999

soma_altura_m = 0
qtd_m = 0
qtd_f = 0

for i in range(1, 16):
    print(f"\nPessoa {i}")

    altura = float(input("Digite a altura (em metros): "))
    genero = input("Digite o gênero (M/F): ").strip().upper()

    if altura > maior_altura:
        maior_altura = altura

    if altura < menor_altura:
        menor_altura = altura

    # Verificando gênero
    if genero == "M":
        soma_altura_m += altura
        qtd_m += 1
    elif genero == "F":
        qtd_f += 1
    else:
        print("Gênero inválido! Considere apenas M ou F.")

if qtd_m > 0:
    media_m = soma_altura_m / qtd_m
else:
    media_m = 0

# Resultados
print("\nRESULTADOS:")
print(f"Maior altura do grupo: {maior_altura:.2f} m")
print(f"Menor altura do grupo: {menor_altura:.2f} m")
print(f"Média da altura dos homens: {media_m:.2f} m")
print(f"Número de mulheres: {qtd_f}")
